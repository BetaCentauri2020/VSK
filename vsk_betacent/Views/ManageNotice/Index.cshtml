@model vsk_betacent.Models.ViewModels.ManageNoticeViewModel
@{ Layout = "_Layout"; }
    ============================================== -->
<!-- Start Main content Wrapper
============================================== -->

<div class="content-wrapper">
    <div class="container-fluid">

        <!-- Breadcrumb -->
        <div class="page-breadcrumb">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <h4>Add Notice</h4>
                </div>
                <div class="col-md-6">
                    <ul>
                        <li>Manage Notice</li>
                        <li><a href="index.html">Add Notice</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <!-- /Breadcrumb -->
        <!-- Start -->
        @Html.AntiForgeryToken()
        @using (Html.BeginForm("AddNotice", "ManageNotice", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <section class="ation-statistics">
                <div class="row">
                    <div class="col-xl-12 col-md-12 col-12 mb-xl-0 mb-4">

                        <div class="card ation-card">
                            <div class="card-header">
                                <h3>Add Notice</h3>
                            </div>
                            <div class="card-body">
                                <div class="form-horizontal">
                                    <div class="form-group row">
                                        <label class="col-md-2 control-label">Title<span class="text-danger">*</span></label>
                                        <div class="col-md-4">
                                            @Html.EditorFor(x => x.addNotice.txt_title, new { htmlAttributes = new { @class = "form-control", @placeholder = "Title",@required="required" } })
                                            <span asp-validation-for="addNotice.txt_title" class="text-danger"></span>
                                        </div>
                                        <label class="col-md-2 control-label">Priority<span class="text-danger">*</span></label>
                                        <div class="col-md-4">
                                            @Html.DropDownListFor(s => s.addNotice.int_proiority, 
                                            new List<SelectListItem>{
                                                    new SelectListItem{ Text="New", Value =" 1 "},
                                                    new SelectListItem{ Text="Default", Value = "2 "},
                                                    new SelectListItem{ Text="Alumini", Value = "3"},
                                                } , "--Select--", new { @class = "form-control single-select",@required="required" })
                                            <span asp-validation-for="addNotice.int_proiority" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-md-2 control-label">Description<span class="text-danger">*</span></label>
                                        <div class="col-md-10">
                                            @Html.TextAreaFor(s => s.addNotice.txt_description, new { @class = "form-control", @placeholder = "Description" ,@required="required"})
                                            <span asp-validation-for="addNotice.txt_description" class="text-danger"></span>

                                        </div>
                                    </div>
                                    <hr>
                                    <div class="form-group row">
                                        <div class="col-md-12 text-center">
                                            <input type="submit" value="Submit" id="btnUpdateSignature" class="btn btn-primary waves-effect waves-light btn-sm">
                                            <input type="reset" value="Reset" class="btn btn-danger  waves-effect waves-light btn-sm" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                    <!--/col-->
                </div>
                <!--/Row-->
            </section>
        }
    </div>
</div>

<!-- End of Main content Wrapper
============================================== -->


