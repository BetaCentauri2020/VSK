@model vsk_betacent.Models.ViewModels.ManageNoticeViewModel

@Html.AntiForgeryToken()
@using (Html.BeginForm("UpdateNotice", "ManageNotice", FormMethod.Post, new { @class= "form-horizontal" }))
{
    <div class="form-group row">
       <label class="col-md-2 control-label">Title<span class="text-danger">*</span></label>
        <div class="col-md-4">
            @Html.EditorFor(x => x.editNotice.txt_title, new { htmlAttributes = new { @class = "form-control", @placeholder = "Title",@required="required" } })
            <span asp-validation-for="editNotice.txt_title" class="text-danger"></span>
        </div>
        <label class="col-md-2 control-label">Priority<span class="text-danger">*</span></label>
        <div class="col-md-4">
            @Html.DropDownListFor(s => s.editNotice.int_proiority, 
            new List<SelectListItem>{
                    new SelectListItem{ Text="New", Value =" 1 "},
                    new SelectListItem{ Text="Default", Value = "2 "},
                    new SelectListItem{ Text="Alumini", Value = "3"},
                } , "--Select--", new { @class = "form-control single-select",@required="required" })
            <span asp-validation-for="editNotice.int_proiority" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
       <label class="col-md-2 control-label">Description<span class="text-danger">*</span></label>
        <div class="col-md-10">
            @Html.TextAreaFor(s => s.editNotice.txt_description, new { @class = "form-control", @placeholder = "Description",@required="required" })
            <span asp-validation-for="editNotice.txt_description" class="text-danger"></span>

        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-12 text-center">
            @Html.HiddenFor(s=>s.editNotice.int_id)
            <input type="submit"class="btn btn-primary waves-effect waves-light btn-sm" value="Update">
        </div>
    </div>
}
 