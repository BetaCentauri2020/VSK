@model vsk_betacent.Models.ViewModels.ManageStaffViewModel
    ============================================== -->
<!-- Start Main content Wrapper
============================================== -->
<style>

.main-body {
    padding: 15px;
}
.card {
    box-shadow: 0 1px 3px 0 rgba(0,0,0,.1), 0 1px 2px 0 rgba(0,0,0,.06);
}

.card {
    position: relative;
    display: flex;
    flex-direction: column;
    min-width: 0;
    word-wrap: break-word;
    background-color: #fff;
    background-clip: border-box;
    border: 0 solid rgba(0,0,0,.125);
    border-radius: .25rem;
}

.card-body {
    flex: 1 1 auto;
    min-height: 1px;
    padding: 1rem;
}

.gutters-sm {
    margin-right: -8px;
    margin-left: -8px;
}

.gutters-sm>.col, .gutters-sm>[class*=col-] {
    padding-right: 8px;
    padding-left: 8px;
}
.mb-3, .my-3 {
    margin-bottom: 1rem!important;
}

.bg-gray-300 {
    background-color: #e2e8f0;
}
.h-100 {
    height: 100%!important;
}
.shadow-none {
    box-shadow: none!important;
}
</style>
 <div class="content-wrapper">
    <div class="container-fluid">

        <!-- Breadcrumb -->
        <div class="page-breadcrumb">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <h4>Admin</h4>
                </div>
                <div class="col-md-6">
                    <ul>
                        <li>Admin</li>
                        <li><a href="index.html">Profile</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <!-- /Breadcrumb -->
        <!-- Start -->
            <section class="ation-statistics">
                <div class="row">
                    <div class="col-xl-12 col-md-12 col-12 mb-xl-0 mb-4">

                        <div class="card ation-card">
                            <div class="card-header">
                                <h3>Profile</h3>
                            </div>
                            <div class="card-body" id="divmain">
                                <div class="container">
                                    <div class="main-body">
                                        <div class="row gutters-sm">
                                            <div class="col-md-4 mb-3">
                                                <div class="card">
                                                <div class="card-body">
                                                    <div class="d-flex flex-column align-items-center text-center">
                                                        @if(@Model.editStaff.txt_img!=null)
                                                        {
                                                            <img src="~/Resources/Profile/@Model.editStaff.txt_img" alt="No Image" class="rounded-circle" width="150">
                                                        }
                                                        else{
                                                            <img src="~/assets/images/author.jpg" alt="No Image" class="rounded-circle" width="150">
                                                        }
                                                        <div class="mt-3">
                                                            <h4>@Model.editStaff.txt_nm</h4>
                                                            <p class="text-secondary mb-1">@Model.editStaff.prof_id.txt_profs</p>
                                                            <p class="text-muted font-size-sm">@Model.editStaff.desg_id.txt_desig</p>
                                                            @* <button class="btn btn-outline-primary" id="btnchgimg">Change Photo</button> *@
                                                            <button class="btn btn-sm btn-outline-primary" id="btnresetpwd">Reset Password</button>
                                                        </div>
                                                    </div>
                                                </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="card-body" id="divResetPassword">
                                <div class="container">
                                    <div class="main-body">
                                        <div class="row gutters-sm">
                                            <div class="col-md-4 mb-3">
                                                <div class="card">
                                                <div class="card-body">
                                                    <div class="d-flex flex-column align-items-center text-center">
                                                        @if(@Model.editStaff.txt_img!=null)
                                                        {
                                                            <img src="~/Resources/Profile/@Model.editStaff.txt_img" alt="No Image" class="rounded-circle" width="150">
                                                        }
                                                        else{
                                                            <img src="~/assets/images/author.jpg" alt="No Image" class="rounded-circle" width="150">
                                                        }
                                                        <div class="mt-3">
                                                            <h4>@Model.editStaff.txt_nm</h4>
                                                            <p class="text-secondary mb-1">@Model.editStaff.prof_id.txt_profs</p>
                                                            <p class="text-muted font-size-sm">@Model.editStaff.desg_id.txt_desig</p>
                                                            @* <button class="btn btn-outline-primary" id="btnchgimg">Change Photo</button> *@
                                                            <button class="btn btn-sm btn-outline-primary" id="btnresetpwd">Reset Password</button>
                                                        </div>
                                                    </div>
                                                </div>
                                                </div>
                                            </div>
                                            <div class="col-md-8">
                                                @Html.AntiForgeryToken()
                                                @using (Html.BeginForm("ResetPassword","ManageStaff",FormMethod.Post))
                                                {
                                                    <div class="card mb-3">
                                                        <div class="card-body">
                                                            <div class="row">
                                                                <div class="col-sm-3">
                                                                    <h6 class="mb-0">Username</h6>
                                                                </div>
                                                                <div class="col-sm-9 text-secondary">
                                                                    @Model.editStaff.txt_email
                                                                </div>
                                                            </div>
                                                            <hr>
                                                            <div class="row">
                                                                <div class="col-sm-3">
                                                                    <h6 class="mb-0">New Password<span class="text-danger">*</span></h6>
                                                                </div>
                                                                <div class="col-sm-9 text-secondary">
                                                                    @Html.EditorFor(x=>x.password,new { htmlAttributes = new { @type="password",@class="form-control",@required="required"} })
                                                                </div>
                                                            </div>
                                                            <hr>
                                                            <div class="row">
                                                                <div class="col-sm-3">
                                                                    <h6 class="mb-0">Confirm Password<span class="text-danger">*</span></h6>
                                                                </div>
                                                                <div class="col-sm-9 text-secondary">
                                                                @Html.EditorFor(x=>x.confirmPassword,new { htmlAttributes = new { @type="password",@class="form-control",@required="required"} })
                                                                </div>
                                                            </div>
                                                            <div class="row">
                                                                <div class="col-sm-3">
                                                                    <h6 class="mb-0"></h6>
                                                                </div>
                                                                <div class="col-sm-9 text-secondary">
                                                                    @Html.HiddenFor(x=>x.editStaff.txt_email)
                                                                    <input type="button" value="<< Back" class="btn btn-sm btn-outline-primary" id="btnback">
                                                                    <input type="submit" value="Update" class="btn btn-sm btn-outline-success">
                                                                    <input type="reset" value="Cancel" class="btn btn-sm btn-outline-danger">
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                } 
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                    <!--/col-->
                </div>
                <!--/Row-->
            </section>
    </div>
</div> 

<!-- End of Main content Wrapper
============================================== -->
@section Scripts{
    <script>
         $("#divResetPassword").hide();
         $("#btnresetpwd").click(function(){
              $("#divmain").hide();
              $("#divResetPassword").show();
         });
        $("#btnback").click(function(){
              $("#divmain").show();
              $("#divResetPassword").hide();
         });    
    </script>
   
}