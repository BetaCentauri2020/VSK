@model vsk_betacent.Models.ViewModels.ManageInquaryViewModel
@{ Layout = "_Layout"; }
<!-- Start Main content Wrapper
============================================== -->
@Html.AntiForgeryToken()
<div class="content-wrapper">
    <div class="container-fluid">

        <!-- Breadcrumb -->
        <div class="page-breadcrumb">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <h4>Inquiry</h4>
                </div>
                <div class="col-md-6">
                    <ul>
                        <li>Manage Inquiry</li>
                        <li>View Inquires</li>
                    </ul>
                </div>
            </div>
        </div>
        <!-- /Breadcrumb -->
        <!-- Statistics -->
        <section class="ation-statistics home-2">
            <div class="row">
                <div class="col-xl-12 col-md-12 col-12 mb-xl-0 mb-4 recent-order-list">

                    <div class="card ation-card">
                        <div class="card-header">
                            <h3>Admission Inquires</h3>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                @if(Model.inquaryList.Any())
                                {
                                    <table class="table table-bordered">
                                        <thead>
                                            <tr>
                                                <th>Sl No</th>
                                                <th>Name</th>
                                                <th>Course</th>
                                                <th>Email</th>
                                                <th>Contact No</th>
                                                <th>Date Of Inquery</th>
                                                <th>Query</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @{int i=1;}
                                            @foreach (var notice in Model.inquaryList)
                                            {
                                                <tr>
                                                    <td>@i</td>
                                                    <td>@notice.name</td>
                                                    <td>@notice.course</td>
                                                    <td>@notice.email</td>
                                                    <td>@notice.Contact_no</td>
                                                    <td>@notice.dt_doi.ToString("dd/MM/yyyy")</td>
                                                    <td>@notice.query</td>
                                                      
                                                </tr>
                                                i++;
                                            }
                                        </tbody>
                                    </table>
                                }
                                else{
                                   <span>No record found.</span>
                                }
                                
                            </div>    
                        </div>
                    </div>

                </div>
                <!--/col-->
            </div>
            <!--/Row-->
        </section>
        <!-- /Statistics -->
        <!-- /section -->
    </div>
</div>


<!-- End of Main content Wrapper
============================================== -->

