@model vsk_betacent.Models.ViewModels.ManageGalleryViewModel

@Html.AntiForgeryToken()
@using (Html.BeginForm("UpdateImage", "ManageGallery", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="form-group row">
        <label class="col-md-2 control-label">Title<span class="text-danger">*</span></label>
        <div class="col-md-4">
            @Html.EditorFor(x => x.editImage.txt_title, new { htmlAttributes = new { @class = "form-control", @placeholder = "Title",@required = true } })
            <span asp-validation-for="editImage.txt_title" class="text-danger"></span>
        </div>
        <label class="col-md-2 control-label">Position</label>
        <div class="col-md-4">
            @Html.EditorFor(x => x.editImage.int_position, new { htmlAttributes = new { @class = "form-control", @placeholder = "Title" } })
           
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-2 control-label">Upload Photo<span class="text-danger">*</span></label>
        <div class="col-md-10">
           @Html.EditorFor(s=>s.profilePic, new{ htmlAttributes = new { @class = "form-control ", @type = "file", @accept = ".png, .jpg, .jpeg" ,@name="file",@id="file",@required = true}})
        </div>
    </div>
    <hr>
    <div class="form-group row">
        <div class="col-md-12 text-center">
            @Html.HiddenFor(s=>s.editImage.int_id)
            <input type="submit"class="btn btn-primary waves-effect waves-light btn-sm" value="Update">
        </div>
    </div>
}
 